generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Channel {
  id        String   @id @default(cuid())
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  url       String
  handle    String?
  youtubeId String?
  createdAt DateTime @default(now())

  ideas     Idea[]
  jobs      Job[]
}


model Idea {
  id        String   @id @default(cuid())
  channelId String
  channel   Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)

  topic     String
  hook      String
  title     String
  thumbnail String
  thumbnailUrl String?
  source    String   @default("local") // "gemini" | "local"

  createdAt DateTime @default(now())
}


model Job {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  channelId String?
  channel   Channel? @relation(fields: [channelId], references: [id], onDelete: SetNull)
  type      String   // e.g., "generate_idea"
  status    String   @default("queued") // queued | running | done | failed
  payload   String   // JSON string
  result    String?  // JSON string
  error     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id           String    @id @default(cuid())
  name         String?
  email        String   @unique
  image        String?          // ✅ ADD THIS
  emailVerified DateTime?       // ✅ ADD THIS
  username     String?   @unique
  firstName    String?
  lastName     String?
  passwordHash String?

  
  pendingEmail        String?
  emailChangeToken    String?
  emailChangeExpires  DateTime?

  accounts     Account[]
  sessions     Session[]

  channels     Channel[]
  jobs      Job[]

  createdAt    DateTime  @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
